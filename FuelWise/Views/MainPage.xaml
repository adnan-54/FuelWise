<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage
    x:Class="FuelWise.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
    xmlns:viewModels="clr-namespace:FuelWise.ViewModels"
    xmlns:views="clr-namespace:FuelWise.Views"
    x:DataType="viewModels:MainPageViewModel">

    <views:MainView BindingContext="{Binding MainViewModel}" />

    <views:DataView BindingContext="{Binding DataViewModel}" />

    <views:ConnectionView BindingContext="{Binding ConnectionViewModel}" />
</TabbedPage>