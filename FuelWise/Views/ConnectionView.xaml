<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:FuelWise.ViewModels"
             x:Class="FuelWise.Views.ConnectionView"
             x:DataType="viewModels:ConnectionViewModel"
             Title="Connection">
    <StackLayout Padding="12" Spacing="6">
        <ListView ItemsSource="{Binding AvailableDevices}" 
                  SelectedItem="{Binding SelectedDevice}" 
                  IsVisible="{Binding HasDevicesToShow}"/>

        <Label Text="No devices found" 
               HorizontalTextAlignment="Center"
               VerticalOptions="CenterAndExpand"
               Opacity="0.7"
               IsVisible="{Binding HasNoDevicesToShow}"/>

        <Button Text="Search Devices" Command="{Binding FindDevicesCommand}" />

        <Button Text="Show Device Infos" Command="{Binding ShowDeviceInfosCommand}" />
    </StackLayout>
</ContentPage>